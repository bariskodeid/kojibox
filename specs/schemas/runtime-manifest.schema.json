{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kojibox Runtime Manifest",
  "type": "object",
  "required": ["version", "services", "bundle"],
  "properties": {
    "version": {"type": "string"},
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "os", "arch", "checksum", "size", "binPath", "defaultPorts"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"},
          "os": {"type": "string"},
          "arch": {"type": "string"},
          "checksum": {"type": "string"},
          "size": {"type": "number"},
          "binPath": {"type": "string"},
          "defaultPorts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "port", "protocol"],
              "properties": {
                "name": {"type": "string"},
                "port": {"type": "number"},
                "protocol": {"type": "string"}
              }
            }
          },
          "env": {
            "type": "object",
            "additionalProperties": {"type": "string"}
          },
          "args": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "bundle": {
      "type": "object",
      "required": ["createdAt", "source", "signature"],
      "properties": {
        "createdAt": {"type": "string", "format": "date-time"},
        "source": {"type": "string"},
        "signature": {"type": "string"}
      }
    }
  }
}
